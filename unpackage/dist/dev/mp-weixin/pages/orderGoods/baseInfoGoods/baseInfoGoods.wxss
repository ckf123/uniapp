.base_info {
  background-color: #f5f5f5;
  height: 100%;
  width: 100%;
}
.Good_top_wrap {
  width: 100%;
  height: 220rpx;
  background-color: #409EFF;
  color: white;
  font-size: 28rpx;
}
.Good_top_wrap .Good_top_body {
  padding-top: 20rpx;
  padding-left: 40rpx;
}
.Good_top_wrap .Good_top_body text {
  display: block;
  margin: 15rpx 0 0;
  padding: 0 0 14rpx;
}
.Good_body_wrap .Good_body_item {
  background-color: #fff;
}
.Good_body_wrap .Good_body_item .good {
  margin: 15rpx 15rpx  15rpx 0;
}
.Good_body_wrap .Good_body_item .Good_body_item_left, .Good_body_wrap .Good_body_item .Good_body_item_right {
  display: grid;
  grid-template-columns: 50% 30% 20%;
}
.Good_body_wrap .Good_body_item .Good_body_item_left .good_materialspec, .Good_body_wrap .Good_body_item .Good_body_item_right .good_materialspec {
  position: relative;
}
.Good_body_wrap .Good_body_item .Good_body_item_left .good_materialspec .good_tip, .Good_body_wrap .Good_body_item .Good_body_item_right .good_materialspec .good_tip {
  display: none;
  position: absolute;
  top: 0;
  box-shadow: 0px 0px 1px #409EFF;
}
.Good_body_wrap .Good_body_item .Good_body_item_left .good_materialspec .good_tip:before, .Good_body_wrap .Good_body_item .Good_body_item_right .good_materialspec .good_tip:before {
  content: "";
  position: absolute;
  top: 100%;
  left: 50%;
  -webkit-transform: translateX(-15rpx);
          transform: translateX(-15rpx);
  width: 0;
  height: 0;
  border: 15rpx solid transparent;
  border-top-color: #409EFF;
}
.Good_body_wrap .Good_body_item .Good_body_item_left .good_materialspec .good_tip::after, .Good_body_wrap .Good_body_item .Good_body_item_right .good_materialspec .good_tip::after {
  content: "";
  position: absolute;
  top: 100%;
  left: 50%;
  -webkit-transform: translateX(-15rpx);
          transform: translateX(-15rpx);
  width: 0;
  height: 0;
  border: 15rpx solid transparent;
  border-top-color: white;
}
.Good_body_sign {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  position: fixed;
  bottom: 0;
  background-color: white;
  text-align: center;
  margin-top: 10rpx;
  border-top: 10rpx solid #f5f5f5;
  z-index: 15;
}

